@using dotNetWebApp.Controllers;

@model IEnumerable<Employee>

<div class="container p-3">
    <div class="row justify-content-center">
        <div class="col-3" style="text-align:center;">
        <h2 class="text-primary">Employee List</h2>
    </div>
    </div>


    <div class="row justify-content-end">
        <div class="col-6" style="text-align:center;">
        <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Add New Employee
        </a>
            <a asp-controller="Employee" asp-action="XLSX" class="btn btn-info ms-2">
                Export to .xlsx
            </a>
            <a asp-controller="Employee" asp-action="CSV" class="btn btn-info m-2">
                Export to .csv.
            </a>
    </div>
    </div>
    </div>

<br/><br/>

<div class="row justify-content-center">
    <table class="col-7 text-center">
    <thead >
        <tr>
            <th>
                 First Name
            </th>
            <th>
                Last Name
            </th>

            <th>
                Position
            </th>
                <th>
                    Info
                </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
                <tr style="border:double;text-align:center;">
                <td>
                    @obj.FirstName HOVERRRRRRRRRRR
                </td>
                <td>
                   @obj.LastName
                </td>                
            
                <td width="15%">
                    @obj.Position
                </td>
                <td>
                        <a asp-controller="Employee" asp-action="Show" asp-route-id=@obj.Id asp-route-currency="RSD" data- class="btn btn-info ms-2">
                        <i class="bi bi-exclamation-square-fill"></i> 
                        </a>


                </td>
            </tr>
        }
    </tbody>
</table>
</div>

    @if (TempData["Message"]!= null)
        @section Scripts{
            <script>
                $(function() {
            Swal.fire("@TempData["Message"]");
                })
            </script>
        }